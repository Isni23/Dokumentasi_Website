    <script>
      // Inisialisasi setelah halaman dimuat
      document.addEventListener("DOMContentLoaded", function () {
        // Element references
        const navButtons = document.querySelectorAll(".nav-btn");
        const pages = document.querySelectorAll(".page");

        // Fungsi untuk menampilkan halaman tertentu
        function showPage(pageId) {
          // Sembunyikan semua halaman
          pages.forEach((page) => {
            page.classList.remove("active");
            page.classList.add("hidden");
          });

          // Tampilkan halaman yang dipilih
          const targetPage = document.getElementById(`${pageId}-page`);
          if (targetPage) {
            targetPage.classList.remove("hidden");
            targetPage.classList.add("active");
          }

          // Update status navigasi
          navButtons.forEach((btn) => {
            btn.classList.remove("nav-active");
          });

          const activeNav = document.getElementById(`nav-${pageId}`);
          if (activeNav) {
            activeNav.classList.add("nav-active");
          }
        }

        // Event listener untuk tombol navigasi
        navButtons.forEach((button) => {
          button.addEventListener("click", function () {
            const target = this.id.replace("nav-", "");
            showPage(target);
          });
        });

        // Event listener untuk link di dalam form
        document.querySelectorAll(".register-link").forEach((link) => {
          link.addEventListener("click", function (e) {
            e.preventDefault();
            showPage("register");
          });
        });

        document.querySelectorAll(".login-link").forEach((link) => {
          link.addEventListener("click", function (e) {
            e.preventDefault();
            showPage("login");
          });
        });

        // Handle form submission
        document
          .getElementById("login-form")
          .addEventListener("submit", function (e) {
            e.preventDefault();
            // Simulasi login berhasil
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML =
              '<i class="fas fa-spinner fa-spin mr-2"></i>Memproses...';
            submitBtn.disabled = true;

            setTimeout(() => {
              alert("Login berhasil! Selamat datang di sistem TIK POLRI.");
              submitBtn.innerHTML = originalText;
              submitBtn.disabled = false;

              // Di sini biasanya akan ada redirect ke dashboard
              // window.location.href = 'dashboard.html';
            }, 1500);
          });

        document
          .getElementById("register-form")
          .addEventListener("submit", function (e) {
            e.preventDefault();
            // Simulasi pendaftaran berhasil
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML =
              '<i class="fas fa-spinner fa-spin mr-2"></i>Mendaftarkan...';
            submitBtn.disabled = true;

            setTimeout(() => {
              alert("Pendaftaran berhasil! Silakan login dengan akun Anda.");
              submitBtn.innerHTML = originalText;
              submitBtn.disabled = false;
              showPage("login");
            }, 1500);
          });

        document
          .getElementById("admin-form")
          .addEventListener("submit", function (e) {
            e.preventDefault();
            // Simulasi login admin berhasil
            const submitBtn = this.querySelector('button[type="submit"]');
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML =
              '<i class="fas fa-spinner fa-spin mr-2"></i>Memverifikasi...';
            submitBtn.disabled = true;

            setTimeout(() => {
              alert("Login admin berhasil! Mengarahkan ke dashboard admin.");
              submitBtn.innerHTML = originalText;
              submitBtn.disabled = false;

              // Di sini biasanya akan ada redirect ke dashboard admin
              // window.location.href = 'admin-dashboard.html';
            }, 1500);
          });

        // Inisialisasi halaman pertama
        showPage("login");
      });
    </script>
  </body>
